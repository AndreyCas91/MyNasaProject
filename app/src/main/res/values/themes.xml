<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNasaProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/aladin</item>
        <item name="android:textSize">20sp</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="tabStyle">@style/TabLayoutTheme</item>

        <item name="materialButtonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="CustomStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipIconVisible">false</item>
    </style>

    <style name="GreenTheme">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary_variant</item>
        <item name="colorOnPrimary">@color/green_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_secondary</item>
        <item name="colorSecondaryVariant">@color/green_secondary_variant</item>
        <item name="colorOnSecondary">@color/green_on_secondary</item>
        <item name="fontFamily">@font/akronim</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColorSecondary">@color/green_text_color_secondary</item>
        <item name="android:textColorPrimary">@color/green_text_color_primary</item>
        <item name="android:background">@color/green_background</item>
        <item name="android:textColor">@color/black</item>

        <item name="materialButtonStyle">@style/MyButtonStyleGreen</item>
    </style>

    <style name="NeonTheme">
        <item name="colorPrimary">@color/neon_primary</item>
        <item name="colorPrimaryVariant">@color/neon_primary_variant</item>
        <item name="colorOnPrimary">@color/neon_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neon_secondary</item>
        <item name="colorSecondaryVariant">@color/neon_secondary_variant</item>
        <item name="colorOnSecondary">@color/neon_on_secondary</item>
        <item name="fontFamily">@font/boogaloo</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/neon_text_color_primary</item>
        <item name="android:textColorSecondary">@color/neon_text_color_secondary</item>
        <item name="android:background">@color/neon_background</item>
        <item name="android:textColor">@color/neon_text_color_primary</item>

        <item name="materialButtonStyle">@style/MyButtonStyleNeon</item>

    </style>

    <style name="MyButtonStyleGreen" parent="Widget.MaterialComponents.Button">
        <item name="android:width">@dimen/width_button</item>
        <item name="android:height">@dimen/height_button</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/green_secondary</item>
    </style>

    <style name="MyButtonStyleNeon" parent="Widget.MaterialComponents.Button">
        <item name="android:width">@dimen/width_button</item>
        <item name="android:height">@dimen/height_button</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/neon_secondary</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:width">@dimen/width_button</item>
        <item name="android:height">@dimen/height_button</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="MyButtonOfDayStart" parent="Widget.MaterialComponents.Button">
        <item name="android:height">30dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="MyButtonTextVisibility" parent="Widget.MaterialComponents.Button">
        <item name="android:height">30dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="MyButtonOfDayEnd" parent="Widget.MaterialComponents.Button">
        <item name="android:height">30dp</item>
        <item name="android:width">100dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

</resources>