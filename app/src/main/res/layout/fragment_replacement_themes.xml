<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/replacementContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/greenTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/GreenTheme"
        app:layout_constraintBottom_toTopOf="@id/neonTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:text="Green Theme" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/neonTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/NeonTheme"
        app:layout_constraintBottom_toTopOf="@id/projectTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greenTheme"
        tools:ignore="MissingConstraints"
        android:text="Neon theme" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/projectTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MyNasaProject"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/neonTheme"
        tools:ignore="MissingConstraints"
        android:text="Project Theme" />


</androidx.constraintlayout.widget.ConstraintLayout>